var name = document.getElementById("bilgisayar")
.addEventListener("mouseover", renkdegistir);

function renkdegistir(){
    document.getElementById("p2")
    .style.background = "purple"
}

var isim = document.getElementById("ogrenciAdi")
.addEventListener("click", isimDegistir);

function isimDegistir(){
    var isimElemanlari = document.getElementsByName("ogrenciAdi");
    isimElemanlari[0].value="Fatma Nur Kılıçkaya"
}
